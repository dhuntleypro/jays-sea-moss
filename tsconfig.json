{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true, // Add this if itâ€™s not already there avoid fake node errors 

    "allowSyntheticDefaultImports": true,  // Enable synthetic default imports
    "esModuleInterop": true,  // React             // Usually a good companion setting
    "moduleResolution": "node", // For react-native
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
        "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
